<h1>Article Soumis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_soumis.each do |article_soumi| %>
      <tr>
        <td><%= article_soumi.title %></td>
        <td><%= article_soumi.content %></td>
        <td><%= link_to 'Show', article_soumi %></td>
        <td><%= link_to 'Edit', edit_article_soumi_path(article_soumi) %></td>
        <td><%= link_to 'Destroy', article_soumi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

