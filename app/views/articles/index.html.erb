<table class="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Information</th>
            <th>Action</th>
        </tr>
    </thead>  
        <% @articles.each do |article| %>
    <tbody>   
        <tr> 
            <td> <%= article.titre %> </td>
            <td> <%= article.description %> </td>
