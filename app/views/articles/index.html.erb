            <td> <%= link_to "Lire l'article", article_path(article), class:"btn btn-info" %> </td>
            <td> <%= link_to "Effacer l'article", article_path(article), method: :delete, class:"btn btn-danger" %> </td>
        </tr>
        
        <% end %>
    </tbody> 
</table>