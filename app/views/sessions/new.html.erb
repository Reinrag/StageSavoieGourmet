<h1 align="center">Connexion au site</h1>

<div class:"row">
        <%= form_for(:session, :html => {class: 'form-horizontal', role: "form"}, url: login_path) do |f| %>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :email, "Email" %>
            </div>
            <div class="col-sm-6">
                <%= f.text_field :email, class: 'form-control', placeholder: "Votre email" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :password, "Mot de passe" %>
            </div>
            <div class="col-sm-6">
                <%= f.password_field :password, class: 'form-control', placeholder: "Votre mot de passe", autocomplete: "off" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
                <%= f.submit "Se connecter", class:"btn btn-success" %>
            </div>
        </div>
    <% end %>
</div>